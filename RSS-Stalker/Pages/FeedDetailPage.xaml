<Page
    x:Class="RSS_Stalker.Pages.FeedDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RSS_Stalker.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:RSS_Stalker.Models"
    xmlns:controls="using:RSS_Stalker.Controls"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:DataType="models:Feed" x:Key="FeedItemTemplate">
            <Grid Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <controls:HoldImage ImageLink="{x:Bind ImageUrl}" Width="40" Height="40" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{x:Bind Title}" Foreground="{ThemeResource ImportantTextColor}" FontSize="14" FontFamily="{StaticResource Title}" TextTrimming="CharacterEllipsis" ToolTipService.ToolTip="{x:Bind Title}"/>
                    <TextBlock Text="{x:Bind Summary}" Margin="0,5,0,0" Foreground="{ThemeResource TipTextColor}" FontSize="10" FontFamily="{StaticResource Basic}" TextTrimming="CharacterEllipsis" ToolTipService.ToolTip="{x:Bind Summary}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel BorderBrush="{ThemeResource LineColor}" BorderThickness="0,0,0,1" Padding="30,17.5" Orientation="Horizontal">
            <Button Style="{StaticResource GhostCircleButtonStyle}" Content="&#xE976;" FontFamily="{StaticResource Icon}" VerticalAlignment="Center" Name="GridViewButton" Click="GridViewButton_Click"/>
            <TextBlock Margin="10,0,0,0" Name="TitleTextBlock" FontFamily="{StaticResource Title}" TextWrapping="Wrap" FontSize="19" HorizontalAlignment="Left"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid>
                <WebView Name="DetailWebView"
                 Loaded="DetailWebView_Loaded"
                 DefaultBackgroundColor="{ThemeResource PageColor}"
                 />
            </Grid>

            <StackPanel VerticalAlignment="Stretch" Width="1" Background="{ThemeResource LineColor}" Margin="0,0,10,0" Grid.Column="1"/>
            <ListView ItemTemplate="{StaticResource FeedItemTemplate}"
                      Name="FeedListView"
                      ItemContainerStyle="{StaticResource TransparentListItemContainer}"
                      IsItemClickEnabled="True"
                      Style="{StaticResource BasicListView}"
                      ItemsSource="{x:Bind ShowFeeds}"
                      ItemClick="FeedListView_ItemClick"
                      MaxWidth="250"
                      Grid.Column="2"
                      />
        </Grid>
        <ProgressRing Name="LoadingRing" Style="{StaticResource BasicProgressRingStyle}" Grid.Row="1"/>
    </Grid>
</Page>
