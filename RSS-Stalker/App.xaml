<Application
    x:Class="RSS_Stalker.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RSS_Stalker">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light" Source="ms-appx:///Theme/Light.xaml"/>
                <ResourceDictionary x:Key="Dark" Source="ms-appx:///Theme/Dark.xaml"/>
            </ResourceDictionary.ThemeDictionaries>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Template/Fonts.xaml"/>
                <ResourceDictionary Source="ms-appx:///Template/Control_View.xaml"/>
                <ResourceDictionary Source="ms-appx:///Template/Control_Single.xaml"/>
                <ResourceDictionary Source="ms-appx:///Template/Control_Input.xaml"/>
                <ResourceDictionary Source="ms-appx:///Template/Control_Button.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
