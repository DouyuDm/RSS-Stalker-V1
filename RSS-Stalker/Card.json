{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "backgroundImage": "$IMAGE$",
  "body": [
    {
      "type": "Container",
      "verticalContentAlignment": "Center",
      "items": [
        {
          "type": "TextBlock",
          "text": "$TITLE$",
          "weight": "bolder",
          "size": "large",
          "wrap": true,
          "maxLines": 3
        },
        {
          "type": "TextBlock",
          "text": "$CONTENT$",
          "size": "default",
          "spacing": "medium",
          "wrap": true,
          "maxLines": 4
        }
      ]
    }
  ]
}