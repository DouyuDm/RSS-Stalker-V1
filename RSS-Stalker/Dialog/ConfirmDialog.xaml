<ContentDialog
    x:Class="RSS_Stalker.Dialog.ConfirmDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RSS_Stalker.Dialog"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    BorderBrush="{ThemeResource LineColor}"
    BorderThickness="1"
    Background="{ThemeResource FlyoutBackground}"
    TitleTemplate="{StaticResource DialogTitle}"
    PrimaryButtonStyle="{StaticResource PrimaryDialogButton}"
    SecondaryButtonStyle="{StaticResource DefaultDialogButton}"
    CloseButtonStyle="{StaticResource DefaultDialogButton}"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <ScrollViewer Style="{StaticResource BasicScrollViewer}" MaxHeight="600">
        <Grid>
            <TextBlock Name="ConfirmTextBlock" Grid.Row="1" Foreground="{ThemeResource NormalTextColor}" FontFamily="{StaticResource Basic}" TextWrapping="Wrap" FontSize="14" LineHeight="22" MaxWidth="300"/>
        </Grid>
    </ScrollViewer>
</ContentDialog>
