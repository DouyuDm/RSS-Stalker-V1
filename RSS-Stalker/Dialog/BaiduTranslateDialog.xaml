<ContentDialog
    x:Class="RSS_Stalker.Dialog.BaiduTranslateDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RSS_Stalker.Dialog"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    BorderBrush="{ThemeResource LineColor}"
    BorderThickness="1"
    Background="{ThemeResource FlyoutBackground}"
    TitleTemplate="{StaticResource DialogTitle}"
    PrimaryButtonStyle="{StaticResource PrimaryDialogButton}"
    SecondaryButtonStyle="{StaticResource DefaultDialogButton}"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <StackPanel>
        <HyperlinkButton x:Uid="Control_BaiduAILinkButton" FontSize="12" Foreground="{ThemeResource NormalTextColor}" Click="HyperlinkButton_Click" Margin="0,0,0,10"/>
        <TextBlock Text="AppId" Style="{StaticResource BasicTipTextStyle}" Margin="0,0,0,5"/>
        <TextBox Style="{StaticResource BasicTextBoxStyle}" Name="AppIdTextBox" HorizontalAlignment="Stretch"/>
        <TextBlock Text="Key" Style="{StaticResource BasicTipTextStyle}" Margin="0,15,0,5"/>
        <TextBox Style="{StaticResource BasicTextBoxStyle}" Name="KeyTextBox" HorizontalAlignment="Stretch"/>
    </StackPanel>
</ContentDialog>
